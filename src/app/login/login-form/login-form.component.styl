.login-form
  flex-basis 300px
  margin auto
  box-sizing border-box
  padding 0
  border-radius 5px
  background-color rgba(0,0,0,.4)
  box-shadow 0 0 10px rgba(0,0,0,.5)

.login-form__header
  box-sizing border-box
  padding 8px 20px
  border-top-left-radius 5px
  border-top-right-radius 5px
  background-color rgba(103,45,41,.3)

.login-form__body {
  box-sizing border-box
  margin 20px
}

.login-form__title
  font-family 'Amatic SC', cursive
  color rgb(180,180,180)

.login-form__label
  display block
  margin 20px 0

  &_first
    margin-top 0
  &_last
    margin-bottom 0

.login-form__input
  width 100%
  box-sizing border-box
  border none
  border-radius 5px
  padding 8px
  background-color transparent
  box-shadow inset 0 0 10px rgba(0,0,0,.5)
  color rgb(180,180,180)
  font-family 'Ravi Prakash', cursive
  text-transform uppercase
  outline none

.login-form__input:focus
  box-shadow inset 0 0 10px rgba(139,68,72,.8)

.buttons-wrap
  padding-top 20px

.login-form__submit-button
  box-sizing border-box
  padding 6px 10px
  border none
  border-radius 5px
  background-color rgba(103,45,41,.3)
  color rgb(180,180,180)
  font-family 'Ravi Prakash', cursive
  text-transform uppercase

  outline none
  cursor pointer

.login-form__submit-button:active
  box-shadow inset 0 0 10px rgba(103,45,41,.8)