.login-wrap
  display flex
  flex-flow row nowrap
  justify-content space-between

  width 100%
  min-height 100vh
  background-attachment fixed
  background-image linear-gradient(rgba(37,40,47,.9), rgba(37,40,47,.6), rgba(37,40,47,.9)), url("/img/login_bg.jpg")
  background-position-x center
  background-size cover

  &__github-link
    position absolute
    bottom 20px
    right 20px
    cursor pointer