.chat-screen
  position absolute
  display block
  top 19px
  left 4px
  width 385px
  height 130px
  padding-left 10px
  padding-right 20px
  box-sizing border-box
  overflow-y scroll

  &::-webkit-scrollbar
    width 8px
    background transparent
    box-shadow inset 0 0 10px rgba(0,0,0,.9)

  &::-webkit-scrollbar-thumb
    position absolute
    background-image linear-gradient(rgba(0,0,0,.3), rgba(0,0,0,.2), rgba(0,0,0,.3)), url('/img/chat/chat_scroll_thumb.png')

  &::-webkit-scrollbar-thumb:hover
    background-image linear-gradient(rgba(0,0,0,.2), rgba(0,0,0,.1), rgba(0,0,0,.2)), url('/img/chat/chat_scroll_thumb.png')

.chat-screen__message-line

.message-line__sender
  margin-right 4px
  color rgb(210,255,210)

.message-line__message
  font-size 14px
  font-family 'PT Sans', sans-serif
  color rgb(255,255,255)